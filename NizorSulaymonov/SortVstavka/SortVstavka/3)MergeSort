// SortVstavka.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//
#include <iostream>
using namespace std;
//Сортировка слиянием
void Merge(double* massive, double l, double r)
{
	int per=0;
	int srav=0;
	int q, left, right, j;
	double* mas = new double[100];
	q = (l + r) / 2; //Поиск среднего элемента
	left = l; //Начало левой части массива
	right = q + 1; //Начало правой части массива
	for (j = l; j <= r; j++) //Выполнение от начала до конца
		
		if ((left <= q) && ((right > r) || (massive[left] < massive[right])))
			
		{
			
			mas[j] = massive[left];
			left++;
			
		}
		else
		{
			
			mas[j] = massive[right];
			right++;
			
		}
	//возвращение результата в массив
	for (j = l; j <= r; j++) massive[j] = mas[j];
	delete[]mas;
	
};
//рекурсивная процедура сортировки
void MergeSort(double* massive, double l, double r)
{
	{
		if (l < r)
		{
			MergeSort(massive, l, (l + r) / 2); //Cортировка левой части 
			MergeSort(massive, (l + r) / 2 + 1, r); //Сортировка правой части
			Merge(massive, l, r); //слияние двух частей массива
		}
	}
};
//Ввод массива 
void main()
{
	setlocale(LC_ALL, "Rus");
	int i, n;
	double* massive = new double[100];
	cout << "Massive size > "; cin >> n;
	for (i = 1; i <= n; i++)
	{
		cout << i << " Number > "; cin >> massive[i];
	}
	MergeSort(massive, 1, n); //Вызов сортировки
	cout << "MergeSort result: "; //Вывод сортированного массива
	for (i = 1; i <= n; i++) cout << massive[i] << " ";
	delete[]massive;//Удаление массива
	system("pause>>void");
}

